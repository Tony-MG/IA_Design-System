  "components":{
    "btn-primary": {
      "id": "btn-primary",
      "name": "Bouton d'action (Style Utilitaire)",
      "type": "button",
      "description": "Un bouton d'action principal dont le style est entièrement défini par des classes utilitaires (type Tailwind CSS). Cette approche permet une grande flexibilité et un contrôle granulaire de l'apparence. Il gère les états hover, active, focus et disabled.",
      "properties": [
        {
          "name": "label",
          "type": "string",
          "description": "Le texte affiché à l'intérieur du bouton.",
          "example": "Envoyer le message"
        },
        {
          "name": "icon",
          "type": "string",
          "description": "Code SVG ou nom de la classe d'une icône à afficher avant le label.",
          "example": "<svg>...</svg>"
        },
        {
          "name": "disabled",
          "type": "boolean",
          "description": "Si vrai, le bouton est désactivé et son apparence change (opacité réduite, curseur non autorisé).",
          "value": false
        }
      ],
      "htmlCode": "<button type=\"button\" aria-disabled=\"{{disabled}}\" class=\"inline-flex items-center justify-center gap-sm px-md py-sm rounded-default rounded-br-none bg-primary-main text-common-white border border-common-transparent font-jost text-body font-bold leading-none transition-colors hover:bg-primary-dark active:bg-primary-dark focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-focus focus-visible:ring-offset-2 focus-visible:ring-offset-common-white disabled:opacity-50 disabled:cursor-not-allowed shadow-sm\" {{disabled ? 'disabled' : ''}}>\n  <!-- L'icône serait insérée ici si fournie -->\n  <span>{{label}}</span>\n</button>",
      "interactions": [
        {
          "action": "click",
          "description": "Déclenche l'action associée. Ne fonctionne pas si l'état est 'disabled'."
        },
        {
          "action": "hover",
          "description": "Le fond du bouton s'assombrit (`bg-primary-dark`) pour fournir un retour visuel."
        },
        {
          "action": "focus",
          "description": "Un anneau de focus (`ring-2`) apparaît autour du bouton pour l'accessibilité au clavier."
        }
      ],
      "subComponents": []
    }
  }
